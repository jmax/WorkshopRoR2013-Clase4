<!DOCTYPE html>
<html>
<head>
  <title>MiTwitter</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if notice || alert %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  <% end %>

  <div class="user-session">
    <% if user_signed_in? %>
      <span class="signed-in-user">
        Hola, <%= current_user.email %>!
      </span>
      <%= link_to "Mis tweets", tweets_path %>
      <%= link_to "Modificar cuenta", edit_user_registration_path %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "Crear tu cuenta", new_user_registration_path %>
      <%= link_to "Sign in", new_user_session_path %>
    <% end %>
  </div>

  <div class="header">
    <h1><%= link_to "Mi Twitter", root_path %></h1>
  </div>

  <div class="main">
    <%= yield %>
  </div>

</body>
</html>
