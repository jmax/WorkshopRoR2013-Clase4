<h3>
  Crear un Tweet
</h3>

<div class="tweet-form">
  <%= form_for @tweet do |f| %>
    <% if @tweet.errors.any? %>
      <ul class="errors">
        <% for error in @tweet.errors.full_messages do %>
          <li>
            <%= error %>
          </li>
        <% end %>
      </ul>
    <% end %>

    <div class="field">
      <%= f.label :body, "Qué está pasando?" %>
      <br>
      <%= f.text_area :body %>
    </div>

    <div class="action">
      <%= f.submit "Compartir Tweet" %>
      <span> or </span>
      <%= link_to "Volver al home", root_path %>
    </div>
  <% end %>
</div>
